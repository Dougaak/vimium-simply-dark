{
  "extends": [
    "stylelint-config-rational-order",
    "stylelint-prettier/recommended",
    "stylelint-config-standard"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-prettier",
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "for",
          "each",
          "include",
          "mixin",
          "content"
        ]
      }
    ],
    "prettier/prettier": true
  }
}
